---
import Breadcrumb from "@/components/Breadcrumb.astro";
import { SITE } from "@/config";

interface StringTitleProp {
  pageTitle: string;
  pageDesc?: string;
}

interface ArrayTitleProp {
  pageTitle: [string, string];
  titleTransition: string;
  pageDesc?: string;
}

export type Props = StringTitleProp | ArrayTitleProp;

const { props } = Astro;

const backUrl = SITE.showBackButton ? Astro.url.pathname : "/";
---

<Breadcrumb />
<main
  data-backUrl={backUrl}
  id="main-content"
  class="mx-auto w-full max-w-app px-4 pb-4"
>
  {
    "titleTransition" in props ? (
      <h1 class="text-2xl font-semibold sm:text-3xl">
        {props.pageTitle[0]}
        <span transition:name={props.titleTransition}>
          {props.pageTitle[1]}
        </span>
      </h1>
    ) : (
      <h1 class="text-2xl font-semibold sm:text-3xl">{props.pageTitle}</h1>
    )
  }
  <p class="mt-2 mb-6 italic">{props.pageDesc}</p>
  <slot />
</main>

<script>
  document.addEventListener("astro:page-load", () => {
    const mainContent: HTMLElement | null =
      document.querySelector("#main-content");
    const currentUrl = mainContent?.dataset?.backurl;
    
    // Get the previous backUrl from sessionStorage (this is the actual "go back" URL)
    const previousBackUrl = sessionStorage.getItem("backUrl");
    
    // Store current URL as the new backUrl for the next page
    if (currentUrl) {
      sessionStorage.setItem("backUrl", currentUrl);
    }
    
    // If this is the first page visit, set backUrl to home
    if (!previousBackUrl && currentUrl && currentUrl !== "/") {
      // For non-home pages on first visit, set backUrl to home
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
